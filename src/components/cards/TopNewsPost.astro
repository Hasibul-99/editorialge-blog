---
import { Image } from "astro:assets";
import Banner from "@/assets/img/blog/top_news_post01.jpg";
import RTEDrawer from "@/components/RTE-drawer/index.astro";
import {
  getImageHeightAndWeight,
  showImage,
  tansation,
} from "@/scripts/helpets";
import dayjs from "dayjs";

type Props = {
  post?: any;
};

const { post } = Astro.props;
---

<div>
  {
    post ? (
      <div class="top-news-post">
        <div class="top-news-post-thumb">
          <a href={"/" + post?.slug}>
            <Image
              src={showImage(post?.image)}
              height={getImageHeightAndWeight(post?.image, "height")}
              width={getImageHeightAndWeight(post?.image, "width")}
              alt="image"
              format="avif"
              quality={"mid"}
            />
          </a>
          {/* <a
            href="https://www.youtube.com/watch?v=G_AEL-Xo5l8"
            class="paly-btn popup-video"
          >
            <i class="fas fa-play" />
          </a> */}
        </div>
        <div class="top-news-post-content">
          {/* <a href="blog.html" class="post-tag-four">
            Sports
          </a> */}
          <h2 class="post-title bold-underline">
            <a href={"/" + post?.slug}>{tansation(post, "title")}</a>
          </h2>
          <div class="blog-post-meta">
            <ul class="list-wrap">
              <li>
                <i class="flaticon-user" />
                by<a href="/">{post.createdBy?.firstname}</a>
              </li>
              <li>
                <i class="flaticon-calendar" />
                {dayjs(post.createdAt).format("DD MMMM, YYYY")}
              </li>
            </ul>
          </div>
          <RTEDrawer
            content={tansation(post, "content_first")}
            className="line-ellipsis-4"
          />
          <div class="view-all-btn">
            <a href={"/" + post?.slug} class="link-btn">
              Read More
              <span class="svg-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 10 10"
                  fill="none"
                >
                  <path
                    d="M1.07692 10L0 8.92308L7.38462 1.53846H0.769231V0H10V9.23077H8.46154V2.61538L1.07692 10Z"
                    fill="currentColor"
                  />
                  <path
                    d="M1.07692 10L0 8.92308L7.38462 1.53846H0.769231V0H10V9.23077H8.46154V2.61538L1.07692 10Z"
                    fill="currentColor"
                  />
                </svg>
              </span>
            </a>
          </div>
        </div>
      </div>
    ) : null
  }
</div>
