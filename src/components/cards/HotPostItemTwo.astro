---
import { tansation } from "@/scripts/helpets";
import dayjs from "dayjs";

type Props = {
  post?: any;
};

const { post } = Astro.props;
---

{
  post ? (
    <div class="hot-post-item hot-post-item-two">
      <div class="hot-post-content">
        <a href="/" class="post-tag-four">
          {post.createdBy?.firstname}
        </a>
        <h4 class="post-title">
          <a href={"/" + post?.slug}>{tansation(post, "title")}</a>
        </h4>
        <div class="blog-post-meta">
          <ul class="list-wrap">
            <li>
              <i class="flaticon-calendar" />
              {dayjs(post.attributes?.createdAt).format("DD MMMM, YYYY")}
            </li>
          </ul>
        </div>
      </div>
    </div>
  ) : null
}
