---
import { Image } from "astro:assets";
import BannerO1 from "@/assets/img/default/default_website_dailylume.jpg";
import RTEDrawer from "@/components/RTE-drawer/index.astro";
import { getImageHeightAndWeight, showImage } from "@/scripts/helpets";
import dayjs from "dayjs";

const { post } = Astro.props;
const imageUrl = showImage(post?.attributes?.image);
const imageHeight = getImageHeightAndWeight(post?.attributes?.image, "height");
const imageWidth = getImageHeightAndWeight(post?.attributes?.image, "width");
---

{
  post ? (
    <div class="politics-post">
      <div class="politics-post-thumb">
        <a href={"/" + post.slug}>
          {
            imageUrl && imageHeight && imageWidth ? (
              <Image
                src={imageUrl}
                height={imageHeight}
                width={imageWidth}
                alt="image"
                format="avif"
                quality={"mid"}
              />
            ) : (
              <Image
                src={BannerO1}
                height={400}
                width={600}
                alt="image"
                format="avif"
                quality={"mid"}
              />
            )
          }
        </a>
      </div>
      <div class="politics-post-content">
        {/* <a href="blog.html" class="post-tag-four">Politics</a> */}
        <h2 class="post-title">
          <a href={"/" + post.slug}>
            {post.title}
          </a>
        </h2>
        <div class="blog-post-meta">
          <ul class="list-wrap">
            <li>
              <i class="flaticon-user" />
              by<a href="/">{post.createdBy?.firstname}</a>
            </li>
            <li>
              <i class="flaticon-calendar" />
              {dayjs(post.createdAt).format("DD MMMM, YYYY")}
            </li>
          </ul>
        </div>
        <RTEDrawer
          content={post.content_first}
          className="line-ellipsis-4"
        />
        <div class="view-all-btn">
          <a href={"/" + post.slug} class="link-btn">
            Read More
            <span class="svg-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 10 10"
                fill="none"
              >
                <path
                  d="M1.07692 10L0 8.92308L7.38462 1.53846H0.769231V0H10V9.23077H8.46154V2.61538L1.07692 10Z"
                  fill="currentColor"
                />
                <path
                  d="M1.07692 10L0 8.92308L7.38462 1.53846H0.769231V0H10V9.23077H8.46154V2.61538L1.07692 10Z"
                  fill="currentColor"
                />
              </svg>
            </span>
          </a>
        </div>
      </div>
    </div>
  ) : null
}
