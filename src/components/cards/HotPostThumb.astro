---
import { Image } from "astro:assets";
import { showImage } from "@/scripts/helpets";

type Props = { image: any; slug: string };

const { image, slug } = Astro.props;
const imageUrl = showImage(image);
---

{
  imageUrl ? (
    <div class="hot-post-thumb">
      <a href={"/" + slug || "#"}>
        <Image src={imageUrl} width={200} height={220} alt="Banner" />
      </a>
    </div>
  ) : null
}
