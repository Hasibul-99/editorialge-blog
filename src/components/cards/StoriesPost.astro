---
import { Image } from "astro:assets";
import Banner from "@/assets/img/blog/nw_banner_post01.jpg";
import {
  getImageHeightAndWeight,
  showImage,
  tansation,
} from "@/scripts/helpets";
import dayjs from "dayjs";

const { post } = Astro.props;
---

{
  post ? (
    <div class="stories-post">
      <div class="stories-post-thumb">
        <a href={post.slug}>
          <Image
            src={showImage(post.image)}
            height={getImageHeightAndWeight(post.image, "height")}
            width={getImageHeightAndWeight(post.image, "width")}
            alt="image"
          />
        </a>
      </div>
      <div class="stories-post-content">
        <a href={post?.category?.data?.attributes.slug} class="post-tag-four">
          {tansation(post?.category?.data?.attributes, "title")}
        </a>
        <h5 class="post-title">
          <a href={post.slug}>{tansation(post, "title")}</a>
        </h5>
        <div class="blog-post-meta">
          <ul class="list-wrap">
            <li>
              <i class="flaticon-calendar" />
              {dayjs(post.PublishedDate).format("DD MMMM, YYYY")}
            </li>
          </ul>
        </div>
      </div>
    </div>
  ) : null
}
