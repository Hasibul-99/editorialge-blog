---
import { Image } from "astro:assets";
import defaultImage from "@/assets/img/default/default_website_dailylume.jpg";
import {
  getImageHeightAndWeight,
  showImage,
} from "@/scripts/helpets";
import dayjs from "dayjs";

const { post } = Astro.props;
---

<div class="banner-post-five">
  {
    post ? (
      <div class="banner-post-thumb-five">
        <a href={post.slug}>
          <Image
            src={showImage(post.image) || defaultImage}
            height={getImageHeightAndWeight(post.image, "height") || 300}
            width={getImageHeightAndWeight(post.image, "width") || 400}
            alt={post.slug}
            loading="lazy"
          />
        </a>
        <div class="banner-post-content-five">
          <a href={"category/" + post?.category?.slug} class="post-tag-four">
            {post?.category?.title}
          </a>
          <h2 class="post-title">
            <a href={post.slug}>{post?.title}</a>
          </h2>
          <div class="blog-post-meta">
            <ul class="list-wrap">
              <li>
                <i class="flaticon-user" />
                by<a href="#">{post.createdBy?.firstname}</a>
              </li>
              <li>
                <i class="flaticon-calendar" />
                {dayjs(post.createdAt).format("DD MMMM, YYYY")}
              </li>
            </ul>
          </div>
        </div>
      </div>
    ) : null
  }
</div>
