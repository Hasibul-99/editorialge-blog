---
import EditorPostThree from "../cards/EditorPostThree.astro";

const { category } = Astro.props;
const posts = category?.posts?.slice(0, 4);
---

<section class="editor-post-area-three">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title-wrap mb-30">
          <div class="section-title section-title-four">
            <h2 class="title">{category?.title}</h2>
            <div class="editor-nav-two"></div>
          </div>
          <div class="section-title-line"></div>
        </div>
      </div>
    </div>
    {
      posts?.length ? (
        <div class="row gutter-40 editor-post-active-two">
          {posts?.map((post: any) => (
            <div class="col-lg-3">
              <EditorPostThree post={post} />
            </div>
          ))}
        </div>
      ) : null
    }
